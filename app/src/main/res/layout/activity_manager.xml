<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a15041867.visitormanagementsystem.ManagerActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:padding="20dp"
        android:text="Welcome !!"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:text="Information of visitors" />

    <Button
        android:id="@+id/btnSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:text="Summary Of Visitors" />

    <Button
        android:id="@+id/btnEvacuation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:text="Evacuation Report" />

    <Button
        android:id="@+id/btnManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.07"
        android:padding="20dp"
        android:text="Manage Users" />
</LinearLayout>
